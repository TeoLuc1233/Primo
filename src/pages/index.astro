---
import Navigation from '../components/Navigation.astro';
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import '../style/global.css';
import BlurTitle from '../components/blurTitle.jsx';
import TextPressure from '../components/TextPressure ';
import DecryptedText from '../components/DecryptedText';




---

<Layout
  style={{
    backgroundColor: '#2e2e2e',
    minHeight: '100vh',
    width: '100%',           // <-- larghezza piena
    margin: 0,               // togli margini esterni
    padding: 0,              // togli padding esterni
    boxSizing: 'border-box', // evita problemi di dimensioni
  }}

  <div style={{position: 'relative', height: 'auto'}}>
    <TextPressure
      text="Benvenuto"
      flex={true}
      alpha={false}
      stroke={false}
      width={true}
      weight={true}
      italic={true}
      textColor="#ffffff"
      strokeColor="#ff0000"
      minFontSize={36}
	  client:visible
    />
<DecryptedText
  text="Ciao Mondo!"
  animateOn="view"
  speed={50}
  sequential
  className="text-white"
  encryptedClassName="text-red-500"
  client:visible
/>
 
	  <!-- <BlurTitle title="Daje Roma" client:load /> -->
    <!-- contenitore dx sx grigio e nero  -->
  <div
    style={{
      display: 'flex',
      flexWrap: 'wrap',  // permette di andare a capo su schermi stretti
      marginTop: '20px',
      width: '100%',
      height: 'auto',
    }}
  >
    <div
    style={{
    backgroundColor: 'black',
    flex: '1 1 50%',
    minHeight: '200px',

    display: 'flex',
    flexDirection: 'column',
    justifyContent: 'center',
    alignItems: 'center',
    padding: '1rem',
    color: 'white',

    borderRadius: '8px',

    /* bordo sfumato effetto glow nero */
    boxShadow: '0 0 10px 4px rgba(0, 0, 0, 0.7)',
  }}
    > <BlurTitle title="About Me" client:load />
<DecryptedText
